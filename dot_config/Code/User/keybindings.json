[
  // ctrl-hjkl to move through menus
  {
    "key": "ctrl+j",
    "command": "list.focusDown",
    "when": "listFocus"
  },
  {
    "key": "ctrl+k",
    "command": "list.focusUp",
    "when": "listFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  },
  // Other commands

  {
    "key": "shift+enter",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // Disable this, I don't remember why.
  {
    "key": "ctrl+e",
    "command": ""
  },
  // Make breadcrumbs work more like vim-vinegar
  {
    "key": "-",
    "command": "breadcrumbs.focusPrevious",
    "when": "breadcrumbsActive && breadcrumbsVisible"
  },

  // Toggle both the activity bar (icons) and sidebar together.
  {
    "key": "ctrl+b",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleActivityBarVisibility",
        "workbench.action.toggleSidebarVisibility"
      ]
    }
  },
  {
    "key": "cmd+b",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleActivityBarVisibility",
        "workbench.action.toggleSidebarVisibility"
      ]
    }
  },
  // Close the terminal when focused with ctrl-p, so that it selecting a file
  // doesn't un-maximize the terminal.
  // Useful when the terminal should always be maximized.
  {
    "key": "cmd+p",
    "when": "terminalFocus",
    "command": "runCommands",
    "args": {
      "commands": ["workbench.action.togglePanel", "workbench.action.quickOpen"]
    }
  },
  {
    "key": "ctrl+p",
    "when": "terminalFocus",
    "command": "runCommands",
    "args": {
      "commands": ["workbench.action.togglePanel", "workbench.action.quickOpen"]
    }
  },
  // Maximize the terminal
  {
    "key": "cmd+shift+j",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  // Close the sidebar after selecting a file in keyboard mode
  {
    "key": "enter",
    "command": "runCommands",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsFolder && !inputFocus",
    "args": {
      "commands": [
        "explorer.openAndPassFocus",
        "workbench.action.toggleSidebarVisibility"
      ]
    }
  }
]
